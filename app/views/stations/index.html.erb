<div id="mapContainer">	
	<div id="stationsMap">
		<div class="mapText"> Click for <span class="live blue">live</span> train times
		</div>
		<div id="linkContainer">
			<ul id="stationsList">
			<% @stations.each do |station| %>
			<li id="station_<%= station.abbr %>">
        <%= turbo_frame_tag(station.abbr) do %>
				  <%= link_to station.name, station_path(id: station.abbr, time: 'minutes'), id: "station_" + station.id.to_s, class: "stationLink" %>
        <% end %>
      </li>
			<% end %>
			</ul>
		</div>
	</div>
</div>
